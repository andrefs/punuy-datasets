{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "module": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "profiles/*.json"
  ]
}
