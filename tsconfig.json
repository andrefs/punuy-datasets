{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "lib": ["ES2017", "DOM"],
    "module": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      ".": ["./src/index.ts"],
      "@types": ["./src/lib/types"],
      "@datasets/*": ["./src/datasets/*"],
      "@profiles/*.json": ["./profiles/*.json"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "profiles/*.json"]
}
