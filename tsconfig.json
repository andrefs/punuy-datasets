{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "lib": ["ES2017", "DOM"],
    "module": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "profiles/*.json"]
}
